{{> header}}

<h1>Editar Post</h1>

<form action="" method="post">
    <label for="">
        Titulo:
        <input type="text" name="title" id="" value="{{post.title}}">
    </label>

    <br>

    <label for="">
        Corpo:
        <textarea name="body">{{post.body}}</textarea>
    </label>

    <br>

    <label for="">
        Tags:
    </label>

    <br>

    <input type="submit" value="Salvar">

</form>